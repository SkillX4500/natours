extends baseEmail

block content
  p Hi #{firstName},
    p Click the link below to reset your password.
    p= url
    p (Website for this function not yet implemented)
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset password
    p If you didn't forget your password, please ignore this message.